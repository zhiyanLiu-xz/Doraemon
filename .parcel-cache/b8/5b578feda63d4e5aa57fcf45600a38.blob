*{margin: 0;padding: 0;box-sizing: border-box;}
*::after,::before{box-sizing: border-box;}

h1{
    display: block;
    font-size: 2em;
    /* 元素中文本的对齐方式 */
    text-align: center;
}

.main{
    border: 1px solid red;
    width: 600px;
    height: 600px;
    position: relative;
    margin: 5% auto;
}
.main .lxj{
    border: 2px solid black;
    position: absolute;
    left: 50%;
}
.main .lxj .lxj1{
    width: 100px;
    height: 5px;
    background: grey;
    margin-left: -50px;
    top: 60px;
    z-index: 2;
}
.main .lxj .lxj2{
    width: 8px;
    height: 30px;
    background: #fcc136;
    top: 50px;
    margin-left: -4px;
    z-index: 1;
}
.main .lxj .yuan{
    width: 20px;
    height: 10px;
    border-radius: 100px 100px 0 0;
    background: #fcc136;
    top: 50px;
    margin-left:-10px ;
    z-index: 3;
}

*{margin: 0;padding: 0;box-sizing: border-box;}
        *::after,::before{box-sizing: border-box;}
        ul,li{list-style: none;}
        #buttons{
            position: fixed;
            right: 0;
            top: 0;
            z-index: 10;
            display: flex;
            flex-direction: column;
            margin-top: 10px;
            margin-right: 10px;
        }
        #buttons>button{
            margin-bottom: 10px;
            padding: 4px 8px;
        }
        #demo2{
            display: none;
        }
        #demo{
            position: fixed;
            height: 100vh;
            top: 0;
            left: 0;
            width: 100%;
            border: 1px solid red;
            overflow-y: auto;
        }
        #demo::-webkit-scrollbar{
            /* 隐藏滚动条 */
            display: none;
        }
        #html{
            position: fixed;
            top: 0;
            left: 50%;
            width: 50vw;
            height: 100vh;
        }